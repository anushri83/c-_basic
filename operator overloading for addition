#include<iostream>
using namespace std;

int add(int x,int y)
{
    return x+y;
}
int add(int x,int y,int z)
{
    return x+y+z;
}
float add(float i,float j)
{
    return i+j;
}
int main()
{
    int a=10, b=5, c,d;
    float e ,k=2.6, m=7.2 ;
    c=add(a,b);
    d=add(a,b,c);
    e=add(k,m); 
    cout<<c<<endl;
    cout<<d<<endl;
    cout<<e<<endl;
    return 0;
}
