#include<iostream>
#include<string>
using namespace std;

int main()
{
    string str="hello world";
    cout<<str.at(6)<<endl;             //access element at index 6
    cout<<str[6]<<endl;
    cout<<str.find("lo")<<endl;       //find index of letter
    cout<<str.find('o')<<endl;
    cout<<str.rfind('o')<<endl;       //find index of letter in reverse
    return 0;
}
